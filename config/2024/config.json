        {
          "code": "stealT",
          "title": "Steal Intake",
          "type": "counter",
          "defaultValue": 0,
          "required": false
        },
        {
          "code": "missedT",
          "title": "Missed",
          "type": "counter",
          "defaultValue": 0,
          "required": false
        }
      ]
    },
    {
      "name": "Endgame",
      "fields": [
        {
          "code": "onstage",
          "title": "Onstage",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "harmony",
          "title": "Harmony",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "trap",
          "title": "Trap",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "parked",
          "title": "Parked",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        }
      ]
    },
    {
      "name": "Postmatch",
      "fields": [
        {
          "code": "comments",
          "title": "Comments",
          "type": "text",
