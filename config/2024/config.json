{
  "$schema": "../schema.json",
  "title": "QRScout",
  "page_title": "422 Crescendo Scouting",
  "sections": [
    {
      "name": "Prematch",
      "preserveDataOnReset": true,
      "fields": [
        {
          "title": "Scouter Initials",
          "type": "text",
          "required": true,
          "code": "scouter"
        },
        {
          "title": "Match Number",
          "type": "number",
          "required": true,
          "code": "matchNumber"
        },
        {
          "title": "Robot Position",
          "type": "select",
          "required": true,
          "code": "robot",
          "choices": {
            "Red 1": "R1",
            "Red 2": "R2",
            "Red 3": "R3",
            "Blue 1": "B1",
            "Blue 2": "B2",
            "Blue 3": "B3"
          },
          "defaultValue": "Red 1"
        },
        {
          "title": "Team Number",
          "type": "number",
          "required": true,
          "code": "team"
        },
        {
          "title": "Starting Position",
          "type": "select",
          "required": false,
          "code": "starting",
          "choices": {
            "Source Side": "Source Side",
            "Amp Side": "Amp Side",
            "Middle": "Middle"
          },
          "defaultValue": "1"
        }
      ]
    },
    {
      "name": "Autonomous",
      "preserveDataOnReset": false,
      "fields": [
        {
          "title": "Mobility",
          "type": "boolean",
          "required": false,
          "defaultValue": false,
          "code": "mobility"
        },
        {
          "title": "Amp",
          "type": "counter",
          "defaultValue": 0,
          "required": false,
          "code": "ampA"
        },
        {
          "title": "Speaker",
          "type": "counter",
          "defaultValue": 0,
          "required": false,
          "code": "speakerA"
        },
        {
          "title": "Missed",
          "type": "counter",
          "defaultValue": 0,
          "required": false,
          "code": "missedA"
        }
      ]
    },
    {
      "name": "Teleop",
      "fields": [
        {
          "code": "ampT",
          "title": "Amp",
          "type": "counter",
          "defaultValue": 0,
          "required": false
        },
        {
          "code": "speakerT",
          "title": "Speaker",
          "type": "counter",
          "defaultValue": 0,
          "required": false
        },
        {
          "code": "sourceIntakeT",
          "title": "Source Intake",
          "type": "counter",
          "defaultValue": 0,
          "required": false
